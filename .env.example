# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# JWT Configuration
JWT_SECRET="your-jwt-secret-here"

# Google OAuth Configuration
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/auth/google/callback"

# Kakao OAuth Configuration
# Get credentials from: https://developers.kakao.com/console/app
KAKAO_CLIENT_ID="your-kakao-client-id"
KAKAO_CLIENT_SECRET="your-kakao-client-secret"
KAKAO_CALLBACK_URL="http://localhost:3000/auth/kakao/callback"

# Server Configuration
PORT=3000
NODE_ENV=development
DEBUG=true

# CORS Configuration
FRONTEND_URL="http://localhost:3001"
SERVER_URL="http://localhost:3000"

# Redis Configuration
# For local development:
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD="" # 비워두면 비밀번호 없음

# For Vercel KV (production):
# REDIS_URL="rediss://default:your-password@your-redis-url.upstash.io:6379"

# Email Configuration (Gmail 사용 예시)
# Gmail 앱 비밀번호 생성: https://myaccount.google.com/apppasswords
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password-here"
